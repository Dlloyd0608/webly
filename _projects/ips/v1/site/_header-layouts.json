{
  "siteId": "inpowersuite",
  "version": "2.0",
  "lastUpdated": "2025-11-16",
  
  "headerLayouts": {
    "standard": {
      "id": "standard",
      "name": "Standard Header",
      "description": "Centered title with subtitle and divider line",
      "alignment": "center",
      "components": ["title", "subtitle", "divider"],
      "styling": {
        "titleSize": "42px",
        "titleWeight": "300",
        "titleColor": "var(--text-primary)",
        "subtitleSize": "18px",
        "subtitleWeight": "500",
        "subtitleStyle": "uppercase",
        "subtitleColor": "var(--brand-primary)",
        "dividerStyle": "full-width",
        "dividerColor": "var(--border-primary)",
        "spacing": "default"
      },
      "cssClasses": ["page-header-meta", "page-main-title", "page-sub-title"],
      "usage": "Most common header - used for hub pages, spoke pages, standard content pages"
    },

    "minimal": {
      "id": "minimal",
      "name": "Minimal Header",
      "description": "Simple centered title without subtitle or divider",
      "alignment": "center",
      "components": ["title"],
      "styling": {
        "titleSize": "36px",
        "titleWeight": "400",
        "titleColor": "var(--text-primary)",
        "spacing": "compact"
      },
      "cssClasses": ["page-header-minimal"],
      "usage": "Simple pages like forms, galleries, or when header should be subtle"
    },

    "hero-overlay-header": {
      "id": "hero-overlay-header",
      "name": "Hero Overlay Header (Integrated)",
      "description": "No separate header section - title integrated into hero image",
      "style": "integrated",
      "components": [],
      "styling": {
        "note": "Header is part of hero-overlay section, not a separate element"
      },
      "usage": "Landing pages where title is overlaid on hero image"
    },

    "breadcrumb-header": {
      "id": "breadcrumb-header",
      "name": "Header with Breadcrumb Navigation",
      "description": "Left-aligned header with breadcrumb trail above title",
      "alignment": "left",
      "components": ["breadcrumb", "title", "subtitle"],
      "styling": {
        "titleSize": "32px",
        "titleWeight": "600",
        "titleColor": "var(--text-primary)",
        "subtitleSize": "16px",
        "subtitleWeight": "400",
        "subtitleColor": "var(--text-secondary)",
        "breadcrumbSeparator": ">",
        "breadcrumbColor": "var(--text-tertiary)",
        "spacing": "comfortable"
      },
      "cssClasses": ["page-header-breadcrumb"],
      "usage": "Deep nested pages where user needs path context"
    },

    "split-header": {
      "id": "split-header",
      "name": "Split Layout Header",
      "description": "Title on left, action buttons on right",
      "alignment": "split",
      "components": ["title", "actions"],
      "styling": {
        "titleSize": "28px",
        "titleWeight": "600",
        "titleColor": "var(--text-primary)",
        "actionButtonStyle": "primary",
        "spacing": "comfortable"
      },
      "cssClasses": ["page-header-split"],
      "actions": [
        {
          "type": "button",
          "label": "Edit",
          "icon": "edit",
          "style": "secondary"
        },
        {
          "type": "button",
          "label": "Share",
          "icon": "share",
          "style": "secondary"
        }
      ],
      "usage": "Dashboard-style pages, admin interfaces"
    },

    "large-centered": {
      "id": "large-centered",
      "name": "Large Centered Header",
      "description": "Extra large centered title for major sections",
      "alignment": "center",
      "components": ["title", "subtitle", "divider"],
      "styling": {
        "titleSize": "54px",
        "titleWeight": "700",
        "titleColor": "var(--brand-primary)",
        "subtitleSize": "24px",
        "subtitleWeight": "300",
        "subtitleColor": "var(--text-secondary)",
        "dividerStyle": "centered",
        "dividerWidth": "200px",
        "dividerColor": "var(--brand-primary)",
        "spacing": "generous"
      },
      "cssClasses": ["page-header-large"],
      "usage": "Major hub pages, campaign landing pages"
    },

    "compact": {
      "id": "compact",
      "name": "Compact Header",
      "description": "Small header with minimal spacing",
      "alignment": "left",
      "components": ["title"],
      "styling": {
        "titleSize": "24px",
        "titleWeight": "600",
        "titleColor": "var(--text-primary)",
        "spacing": "tight"
      },
      "cssClasses": ["page-header-compact"],
      "usage": "Dense content pages, documentation"
    },

    "none": {
      "id": "none",
      "name": "No Header",
      "description": "Page has no header section",
      "style": "none",
      "components": [],
      "usage": "Full-screen experiences, custom layouts"
    }
  }
}