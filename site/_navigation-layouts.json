{
  "siteId": "inpowersuite",
  "version": "2.0",
  "lastUpdated": "2025-11-16",
  
  "navigationLayouts": {
    "tab-bar-sibling": {
      "id": "tab-bar-sibling",
      "name": "Horizontal Tab Bar - Sibling Navigation",
      "type": "secondary",
      "style": "horizontal-tabs",
      "position": "below-header",
      "sticky": true,
      "description": "Horizontal bar showing hub link + all sibling spoke pages",
      "behavior": {
        "showHubLink": true,
        "showSiblings": true,
        "highlightActive": true,
        "centerAlign": true,
        "hubLinkStyle": "primary",
        "siblingLinkStyle": "secondary"
      },
      "visibility": {
        "hubPage": false,
        "spokePage": true
      },
      "styling": {
        "backgroundColor": "var(--bg-accent)",
        "borderRadius": "8px",
        "padding": "var(--spacing-medium)",
        "gap": "var(--spacing-small)",
        "maxWidth": "900px",
        "margin": "var(--spacing-large) auto"
      },
      "cssClasses": ["sibling-nav-block", "sibling-nav-item", "nav-hub-link"],
      "usage": "Spoke pages within Markets hub (MLM, Party Plan, B2B, B2C)"
    },

    "tab-bar-hub-sections": {
      "id": "tab-bar-hub-sections",
      "name": "Horizontal Tab Bar - Hub Sections",
      "type": "secondary",
      "style": "horizontal-tabs",
      "position": "below-header",
      "sticky": true,
      "description": "Tab menu showing hub sub-sections (like Features hub)",
      "behavior": {
        "showOnHub": true,
        "showOnSpokes": false,
        "hideWhenHome": true,
        "autoGenerate": true,
        "sourceFromChildren": true
      },
      "visibility": {
        "hubPage": true,
        "spokePage": false
      },
      "styling": {
        "backgroundColor": "var(--bg-tertiary)",
        "borderBottom": "1px solid var(--border-primary)",
        "padding": "var(--spacing-medium) 0",
        "justifyContent": "center"
      },
      "cssClasses": ["page-menu-wrapper", "page-submenu-bar", "page-submenu-item"],
      "usage": "Features hub with sections (Frontend, Back Office, App Manager)"
    },

    "sidebar-left": {
      "id": "sidebar-left",
      "name": "Left Sidebar Navigation",
      "type": "secondary",
      "style": "vertical-sidebar",
      "position": "left",
      "sticky": true,
      "description": "Vertical navigation sidebar on left side",
      "behavior": {
        "showHubLink": true,
        "showSiblings": true,
        "showSubSections": true,
        "collapsible": true,
        "defaultExpanded": true,
        "autoCollapse": false
      },
      "visibility": {
        "hubPage": true,
        "spokePage": true
      },
      "styling": {
        "width": "250px",
        "backgroundColor": "var(--bg-secondary)",
        "borderRight": "1px solid var(--border-primary)",
        "padding": "var(--spacing-large)"
      },
      "cssClasses": ["sidebar-nav-left"],
      "usage": "Documentation pages, knowledge base, multi-level content"
    },

    "sidebar-right": {
      "id": "sidebar-right",
      "name": "Right Sidebar Navigation",
      "type": "secondary",
      "style": "vertical-sidebar",
      "position": "right",
      "sticky": true,
      "description": "Vertical navigation sidebar on right side with table of contents",
      "behavior": {
        "showHubLink": false,
        "showSiblings": false,
        "showSubSections": true,
        "showTableOfContents": true,
        "autoHighlightScroll": true
      },
      "visibility": {
        "hubPage": false,
        "spokePage": true
      },
      "styling": {
        "width": "280px",
        "backgroundColor": "var(--bg-tertiary)",
        "borderLeft": "1px solid var(--border-primary)",
        "padding": "var(--spacing-large)"
      },
      "cssClasses": ["sidebar-nav-right"],
      "usage": "Long-form content pages, articles, guides"
    },

    "breadcrumb-only": {
      "id": "breadcrumb-only",
      "name": "Breadcrumb Navigation Only",
      "type": "secondary",
      "style": "breadcrumb",
      "position": "above-header",
      "sticky": false,
      "description": "Simple breadcrumb trail without full navigation",
      "behavior": {
        "showPath": true,
        "showSiblings": false,
        "separator": ">",
        "homeLabel": "Home"
      },
      "visibility": {
        "hubPage": false,
        "spokePage": true
      },
      "styling": {
        "fontSize": "var(--font-size-small)",
        "color": "var(--text-tertiary)",
        "padding": "var(--spacing-small) 0"
      },
      "cssClasses": ["breadcrumb-nav"],
      "usage": "Deep pages where context is needed but full nav is too much"
    },

    "dropdown-menu": {
      "id": "dropdown-menu",
      "name": "Dropdown Menu Navigation",
      "type": "secondary",
      "style": "dropdown",
      "position": "below-header",
      "sticky": false,
      "description": "Compact dropdown selector for mobile or space-constrained layouts",
      "behavior": {
        "showHubLink": true,
        "showSiblings": true,
        "defaultLabel": "Navigate to...",
        "autoNavigate": true
      },
      "visibility": {
        "hubPage": false,
        "spokePage": true
      },
      "styling": {
        "width": "100%",
        "maxWidth": "400px",
        "backgroundColor": "var(--bg-primary)",
        "border": "1px solid var(--border-primary)",
        "borderRadius": "4px",
        "padding": "var(--spacing-small)"
      },
      "cssClasses": ["dropdown-nav"],
      "usage": "Mobile responsive layouts, compact interfaces"
    },

    "pagination": {
      "id": "pagination",
      "name": "Pagination Navigation",
      "type": "secondary",
      "style": "pagination",
      "position": "bottom",
      "sticky": false,
      "description": "Previous/Next buttons for sequential content",
      "behavior": {
        "showPrevious": true,
        "showNext": true,
        "showPageNumbers": false,
        "wrapAround": false
      },
      "visibility": {
        "hubPage": false,
        "spokePage": true
      },
      "styling": {
        "display": "flex",
        "justifyContent": "space-between",
        "padding": "var(--spacing-large) 0",
        "borderTop": "1px solid var(--border-primary)"
      },
      "cssClasses": ["pagination-nav"],
      "usage": "Sequential content like tutorials, multi-page articles"
    },

    "none": {
      "id": "none",
      "name": "No Secondary Navigation",
      "type": "none",
      "description": "Page has no secondary navigation (top-level pages only)",
      "visibility": {
        "hubPage": false,
        "spokePage": false
      },
      "usage": "Top-level pages (Services, Clients, Home), standalone pages"
    }
  }
}
