{{!--
  file: ./templates/layouts/two-column-subtitles.hbs
  Pattern 12: Two-Column with Subtitles
  
  Description:
  Two-column layout with a main title spanning full width, followed by 
  subtitled columns. Each column can have independent content and multiple 
  sections. Perfect for side-by-side comparisons, feature tiers, or 
  contrasting information.
  
  Content Structure Expected:
  {
    "id": "comparison",
    "layout": "two-column-subtitles",
    "elements": [
      {
        "type": "title",
        "content": "Feature Comparison",
        "level": 1,
        "position": "header"
      }
    ],
    "columns": [
      {
        "subtitle": "Standard Plan",
        "elements": [
          { "type": "list", "title": "Core Features", "style": "checkmark", "items": [...] },
          { "type": "callToAction", "text": "Choose Standard", "targetId": "pricing" }
        ]
      },
      {
        "subtitle": "Enterprise Plan",
        "elements": [
          { "type": "paragraph", "content": "..." },
          { "type": "callToAction", "text": "Contact Sales", "targetId": "contact" }
        ]
      }
    ]
  }
--}}

<section class="static-section two-column-layout">
    {{!-- Header Elements (Optional - spans full width) --}}
    {{#if content.elements}}
        {{#each content.elements}}
            {{#if (eq position "header")}}
                {{#if (eq type "title")}}
                    <h{{level}} class="section-title">{{escapeHtml content}}</h{{level}}>
                {{else if (eq type "paragraph")}}
                    <p class="section-intro">{{{markdown content}}}</p>
                {{/if}}
            {{/if}}
        {{/each}}
    {{/if}}

    {{!-- Two Columns Container --}}
    {{#if content.columns}}
        <div class="two-column-container">
            {{#each content.columns}}
                <div class="column-wrapper">
                    {{!-- Column Subtitle --}}
                    {{#if subtitle}}
                        <h2 class="column-subtitle">{{escapeHtml subtitle}}</h2>
                    {{/if}}

                    {{!-- Column Content Elements --}}
                    {{#if elements}}
                        <div class="static-text-container">
                            {{#each elements}}
                                {{!-- Title Element --}}
                                {{#if (eq type "title")}}
                                    <h{{level}}>{{escapeHtml content}}</h{{level}}>
                                {{/if}}

                                {{!-- Paragraph Element --}}
                                {{#if (eq type "paragraph")}}
                                    <p>{{{markdown content}}}</p>
                                {{/if}}

                                {{!-- List Element --}}
                                {{#if (eq type "list")}}
                                    {{#if title}}
                                        <h3 class="list-title">{{escapeHtml title}}</h3>
                                    {{/if}}
                                    <ul class="list-{{style}}">
                                        {{#each items}}
                                            <li>{{{markdown this}}}</li>
                                        {{/each}}
                                    </ul>
                                {{/if}}

                                {{!-- Media Element --}}
                                {{#if (eq type "media")}}
                                    <div class="media-container media-{{size}}">
                                        {{#if (eq mediaType "image")}}
                                            <img src="{{mediaPath src}}" alt="{{escapeHtml alt}}" class="column-image">
                                        {{else if (eq mediaType "icon")}}
                                            <img src="{{mediaPath src}}" alt="{{escapeHtml alt}}" class="column-icon">
                                        {{/if}}
                                    </div>
                                {{/if}}

                                {{!-- Call-to-Action Element --}}
                                {{#if (eq type "callToAction")}}
                                    <p class="read-more-wrapper">
                                        {{#if targetId}}
                                            <a href="{{linkPath targetId}}" class="read-more-link {{style}}">
                                                {{text}}{{#unless (eq style "link")}} &gt;{{/unless}}
                                            </a>
                                        {{else if url}}
                                            <a href="{{url}}" class="read-more-link {{style}}" target="_blank" rel="noopener noreferrer">
                                                {{text}}{{#unless (eq style "link")}} &gt;{{/unless}}
                                            </a>
                                        {{/if}}
                                    </p>
                                {{/if}}

                                {{!-- Spacer Element --}}
                                {{#if (eq type "spacer")}}
                                    <div class="spacer spacer-{{height}}"></div>
                                {{/if}}
                            {{/each}}
                        </div>
                    {{/if}}
                </div>
            {{/each}}
        </div>
    {{/if}}
</section>
