{
  "version": "0.0.5",
  "description": "WebGen Phase 1 - Build System Configuration",
  "lastUpdated": "2025-11-29",

  "paths": {
    "build": "./_buildr/",
    "templates": "./_templates/",
    "site": "./site/",
    "src": "./src/",
    "styles": "./styles/",
    "scripts": "./scripts/",
    "assets": "./assets/",
    "dist": "./_dist/"
  },

  "siteConfigFiles": {
    "main": "site_config.json",
    "layouts": "_layouts.json",
    "pageTemplates": "_page-templates.json",
    "headerLayouts": "_header-layouts.json",
    "navigationLayouts": "_navigation-layouts.json",
    "menu": "_menu.json"
  },

  "languages": {
    "default": "en",
    "supported": ["en", "es", "fr"]
  },

  "build": {
    "outputFormat": "static-html",
    "cleanDistBeforeBuild": false,
    "generateSourceMaps": false,
    "minifyHTML": false,
    "prettyPrint": true
  },

  "watch": {
    "enabled": true,
    "contentFiles": "./src/**/*_content.json",
    "pageFiles": "./src/**/*_page.json",
    "siteFiles": "./site/**/*.json",
    "templates": "./templates/**/*.hbs",
    "styles": "./styles/**/*.css",
    "debounceMs": 500
  },

  "server": {
    "port": 3000,
    "open": false,
    "notify": false,
    "host": "localhost",
    "cors": true
  },

  "media": {
    "basePath": "/assets/",
    "fallbackPath": "/assets/",
    "supportedFormats": ["jpg", "jpeg", "png", "gif", "svg", "webp"]
  },

  "routes": {
    "homePageId": "home",
    "homeFileName": "index.html",
    "spokePattern": "{{pageId}}.html",
    "hubPattern": "{{pageId}}.html"
  },

  "rendering": {
    "defaultSplit": "50-50",
    "defaultImageSide": "right",
    "defaultColumns": 2,
    "supportedSplits": ["30-70", "40-60", "50-50", "60-40", "70-30"],
    "supportedColumns": [1, 2, 3, 4]
  },

  "validation": {
    "validateOnBuild": true,
    "strictMode": false,
    "requiredFields": {
      "content": ["siteId", "contentId", "language", "hub", "blocks"],
      "page": ["siteId", "pageId", "pageType", "language", "hub", "pageTemplate", "contentSource", "metadata"]
    }
  },

  "logging": {
    "level": "info",
    "showTimestamps": true,
    "colorize": true,
    "logToFile": false
  },

  "performance": {
    "enableCaching": true,
    "cacheTemplates": true,
    "cacheConfigs": true,
    "parallelBuild": false
  },

  "features": {
    "elementBasedPatterns": true,
    "legacyFormatSupport": false,
    "carouselSupport": true,
    "formValidation": false,
    "multiLanguage": true
  },

  "hooks": {
    "beforeBuild": null,
    "afterBuild": null,
    "beforePageRender": null,
    "afterPageRender": null
  },

  "patterns": {
    "site-level": {
      "announcement-banner": {
        "template": "partials/announcement-banner.hbs",
        "enabled": true
      },
      "app-header": {
        "template": "partials/header.hbs",
        "required": true
      },
      "primary-navigation": {
        "template": "partials/navigation.hbs",
        "required": true
      },
      "footer": {
        "template": "partials/footer.hbs",
        "required": true
      }
    },
    "content-patterns": {
      "split-left": {
        "id": "split-left",
        "template": "layouts/split-left.hbs",
        "description": "Pattern 5: Split layout with image on left"
      },
      "split-right": {
        "id": "split-right",
        "template": "layouts/split-right.hbs",
        "description": "Pattern 6: Split layout with image on right"
      },
      "multi-title-lists": {
        "id": "multi-title-lists",
        "template": "layouts/multi-title-lists.hbs",
        "description": "Pattern 7: Multi-title with multiple lists"
      },
      "stacked-image-top": {
        "id": "stacked-image-top",
        "template": "layouts/stacked-image-top.hbs",
        "description": "Pattern 8: Stacked layout with image at top"
      },
      "stacked-image-bottom": {
        "id": "stacked-image-bottom",
        "template": "layouts/stacked-image-bottom.hbs",
        "description": "Pattern 9: Stacked layout with image at bottom"
      },
      "complex-split": {
        "id": "complex-split",
        "template": "layouts/complex-split.hbs",
        "description": "Pattern 10: Complex split with mixed content"
      },
      "grid-layout": {
        "id": "grid-layout",
        "template": "layouts/grid-layout.hbs",
        "description": "Pattern 11: Grid layout (2/3/4 columns)"
      },
      "two-column-subtitles": {
        "id": "two-column-subtitles",
        "template": "layouts/two-column-subtitles.hbs",
        "description": "Pattern 12: Two-column with subtitles"
      },
      "form-1-up": {
        "id": "form-1-up",
        "template": "layouts/form-1-up.hbs",
        "description": "Pattern 13: Form block with 1-up layout"
      },
      "form-2-up": {
        "id": "form-2-up",
        "template": "layouts/form-2-up.hbs",
        "description": "Pattern 14: Form block with 2-up layout"
      }
    }
  },

  "elementTypes": {
    "media": {
      "supportedTypes": ["image", "carousel", "video"],
      "requiredFields": ["type", "src", "alt"],
      "optionalFields": ["position", "captions", "size"]
    },
    "title": {
      "supportedLevels": [1, 2, 3],
      "requiredFields": ["content", "level"],
      "optionalFields": ["position"]
    },
    "paragraph": {
      "requiredFields": ["content"],
      "optionalFields": ["position"],
      "markdownSupport": true
    },
    "list": {
      "supportedStyles": ["bullets", "checkmark", "numbered", "checkbox"],
      "requiredFields": ["style", "items"],
      "optionalFields": ["title", "position"]
    },
    "callToAction": {
      "supportedStyles": ["primary", "secondary", "link", "outline"],
      "requiredFields": ["text"],
      "optionalFields": ["targetId", "url", "style", "position"]
    },
    "spacer": {
      "supportedSizes": ["small", "medium", "large"],
      "requiredFields": ["height"],
      "optionalFields": []
    }
  },

  "carousel": {
    "autoAdvance": false,
    "autoAdvanceInterval": 5000,
    "showControls": true,
    "showDots": true,
    "loop": true,
    "transitionDuration": 500
  },

  "grid": {
    "defaultColumns": 2,
    "supportedColumns": [1, 2, 3, 4],
    "mobileBreakpoint": 768,
    "tabletBreakpoint": 1024,
    "responsiveBehavior": {
      "4-column": {"mobile": 1, "tablet": 2, "desktop": 4},
      "3-column": {"mobile": 1, "tablet": 2, "desktop": 3},
      "2-column": {"mobile": 1, "tablet": 2, "desktop": 2},
      "1-column": {"mobile": 1, "tablet": 1, "desktop": 1}
    }
  },

  "form": {
    "defaultLayout": "1-up",
    "supportedLayouts": ["1-up", "2-up"],
    "fieldSizes": ["half", "full"],
    "supportedTypes": ["text", "email", "tel", "textarea", "select", "checkbox", "radio"],
    "validation": {
      "enabled": false,
      "clientSide": false,
      "serverSide": false
    }
  }
}
