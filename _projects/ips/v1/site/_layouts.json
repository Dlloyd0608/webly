{
  "siteId": "inpowersuite",
  "version": "2.0",
  "lastUpdated": "2025-11-16",
  
  "layouts": {
    "alternating-image": {
      "id": "alternating-image",
      "name": "Alternating Image & Text",
      "description": "Side-by-side layout with image and text that alternates position",
      "defaultSettings": {
        "split": "50-50",
        "imageSide": "right",
        "alignment": "center"
      },
      "supportedSplits": ["30-70", "40-60", "50-50", "60-40", "70-30"],
      "supportedSides": ["left", "right"],
      "contentSlots": {
        "title": {
          "required": true,
          "type": "text",
          "description": "Section heading"
        },
        "paragraph": {
          "required": false,
          "type": "richtext",
          "description": "Main descriptive text"
        },
        "listItems": {
          "required": false,
          "type": "array",
          "description": "Bullet point list"
        },
        "media": {
          "required": true,
          "type": "media",
          "description": "Image or carousel"
        },
        "callToAction": {
          "required": false,
          "type": "link",
          "description": "Read more link"
        }
      }
    },

    "hero-banner": {
      "id": "hero-banner",
      "name": "Hero Banner",
      "description": "Full-width image with centered text below",
      "defaultSettings": {
        "textAlignment": "center",
        "imageHeight": "auto"
      },
      "contentSlots": {
        "title": {
          "required": true,
          "type": "text",
          "description": "Hero headline"
        },
        "paragraph": {
          "required": false,
          "type": "richtext",
          "description": "Hero description text"
        },
        "media": {
          "required": true,
          "type": "media",
          "description": "Hero background image"
        }
      }
    },

    "hero-overlay": {
      "id": "hero-overlay",
      "name": "Hero with Overlay",
      "description": "Full-width image with text overlaid on top",
      "defaultSettings": {
        "overlayOpacity": 0.4,
        "textColor": "white",
        "textShadow": true
      },
      "contentSlots": {
        "title": {
          "required": true,
          "type": "text",
          "description": "Overlaid headline (large, bold)"
        },
        "subtitle": {
          "required": false,
          "type": "text",
          "description": "Overlaid subheading"
        },
        "media": {
          "required": true,
          "type": "media",
          "description": "Background image"
        }
      }
    },

    "feature-grid": {
      "id": "feature-grid",
      "name": "Feature Grid",
      "description": "Multi-column grid of feature panels with icons and lists",
      "defaultSettings": {
        "columns": 2,
        "iconPosition": "top",
        "panelStyle": "card"
      },
      "supportedColumns": [1, 2, 3, 4],
      "contentSlots": {
        "title": {
          "required": false,
          "type": "text",
          "description": "Section title above grid"
        },
        "panels": {
          "required": true,
          "type": "array",
          "description": "Array of feature panel objects",
          "panelStructure": {
            "title": "required",
            "iconSrc": "optional",
            "listItems": "required"
          }
        }
      }
    },

    "text-block": {
      "id": "text-block",
      "name": "Text Block",
      "description": "Simple text content with optional title and formatting",
      "defaultSettings": {
        "maxWidth": "900px",
        "alignment": "left",
        "fontSize": "regular"
      },
      "contentSlots": {
        "title": {
          "required": false,
          "type": "text",
          "description": "Section title"
        },
        "content": {
          "required": true,
          "type": "richtext",
          "description": "Main text content (supports markdown)"
        },
        "callToAction": {
          "required": false,
          "type": "link",
          "description": "Inline links"
        }
      }
    },

    "form": {
      "id": "form",
      "name": "Contact/Data Form",
      "description": "Contact or data collection form with configurable fields",
      "defaultSettings": {
        "submitButtonText": "Submit",
        "successMessage": "Thank you for your submission!",
        "layout": "vertical"
      },
      "contentSlots": {
        "title": {
          "required": false,
          "type": "text",
          "description": "Form heading"
        },
        "description": {
          "required": false,
          "type": "text",
          "description": "Form instructions"
        },
        "fields": {
          "required": true,
          "type": "array",
          "description": "Array of form field definitions",
          "fieldStructure": {
            "name": "required",
            "label": "required",
            "type": "required (text|email|tel|textarea|select)",
            "required": "optional (boolean)",
            "size": "optional (full|half)"
          }
        }
      }
    },

    "image-gallery": {
      "id": "image-gallery",
      "name": "Image Gallery",
      "description": "Grid of images with optional captions",
      "defaultSettings": {
        "columns": 3,
        "spacing": "medium",
        "lightbox": true
      },
      "supportedColumns": [2, 3, 4, 5],
      "contentSlots": {
        "title": {
          "required": false,
          "type": "text",
          "description": "Gallery title"
        },
        "images": {
          "required": true,
          "type": "array",
          "description": "Array of image objects",
          "imageStructure": {
            "src": "required",
            "alt": "required",
            "caption": "optional"
          }
        }
      }
    },

    "video-embed": {
      "id": "video-embed",
      "name": "Video Embed",
      "description": "Embedded video with optional title and description",
      "defaultSettings": {
        "aspectRatio": "16:9",
        "autoplay": false,
        "controls": true
      },
      "contentSlots": {
        "title": {
          "required": false,
          "type": "text",
          "description": "Video title"
        },
        "description": {
          "required": false,
          "type": "richtext",
          "description": "Video description"
        },
        "videoUrl": {
          "required": true,
          "type": "text",
          "description": "YouTube/Vimeo URL or video file path"
        }
      }
    }
  }
}